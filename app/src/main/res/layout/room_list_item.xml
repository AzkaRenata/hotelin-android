<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_weight="1"
    android:background="#FFFF"
    android:orientation="vertical"
    android:padding="0dp">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="20dp"
        android:layout_margin="8dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="450dp">

            <ImageView
                android:id="@+id/room_list_item_room_iv"
                android:src="@drawable/room"
                android:scaleType="centerCrop"
                android:layout_width="match_parent"
                android:layout_height="200dp"/>

            <TextView
                android:id="@+id/room_list_item_room_type_tv"
                android:layout_below="@+id/room_list_item_room_iv"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="10dp"
                android:text="Presidential Suite"
                android:fontFamily="@font/bold"
                android:textColor="#707070"
                android:textSize="18sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/room_list_item_fac1"
                android:layout_below="@+id/room_list_item_room_type_tv"
                android:drawableStart="@drawable/lunch"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/regular"
                android:text="   Not Available"
                android:textColor="#707070"
                android:textSize="16sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/room_list_item_fac2"
                android:layout_below="@+id/room_list_item_fac1"
                android:drawableStart="@drawable/wifi"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="10dp"
                android:text="   Not Available"
                android:fontFamily="@font/regular"
                android:textColor="#707070"
                android:textSize="16sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/room_list_item_fac3"
                android:layout_below="@+id/room_list_item_fac2"
                android:drawableStart="@drawable/bed"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="10dp"
                android:text="   Not Available"
                android:fontFamily="@font/regular"
                android:textColor="#707070"
                android:textSize="16sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/room_list_item_room_price_tv"
                android:layout_below="@+id/room_list_item_fac3"
                android:textAlignment="textEnd"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="10dp"
                android:text="Rp. 5.625.082"
                android:fontFamily="@font/bold"
                android:textColor="#5399af"
                android:textSize="18sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <Button
                android:id="@+id/room_list_item_select_btn"
                android:layout_below="@+id/room_list_item_room_price_tv"
                android:text="Choose Room"
                android:textSize="14dp"
                android:layout_alignParentRight="true"
                android:layout_gravity="center"
                android:background="@drawable/bg_btn"
                android:layout_marginRight="16dp"
                android:fontFamily="@font/bold"
                android:layout_width="118dp"
                android:layout_height="36dp"
                android:layout_marginTop="12dp"
                android:textColor="#ffff" />

        </RelativeLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>