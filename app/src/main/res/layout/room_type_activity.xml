<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="1098dp"
        android:layout_weight="1"
        android:background="#FFFF"
        android:orientation="vertical"
        android:padding="32dp">

        <LinearLayout
            android:layout_gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/bold"
                android:padding="2dp"
                android:text="Eashtin Ashta Resort"
                android:textColor="#707070"
                android:textSize="18dp" />
        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="20dp" >
        </RelativeLayout>

        <LinearLayout
            android:layout_gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="20dp"
                android:layout_margin="8dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="450dp">

                    <ImageView
                        android:id="@+id/hotel_iv"
                        android:src="@drawable/room"
                        android:scaleType="centerCrop"
                        android:layout_width="match_parent"
                        android:layout_height="200dp"/>

                    <TextView
                        android:id="@+id/hotel_name_tv"
                        android:layout_below="@+id/hotel_iv"
                        android:layout_marginLeft="16dp"
                        android:layout_marginTop="10dp"
                        android:text="Presidential Suite"
                        android:fontFamily="@font/bold"
                        android:textColor="#707070"
                        android:textSize="18sp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                    <TextView
                        android:id="@+id/wifi"
                        android:layout_below="@+id/hotel_name_tv"
                        android:drawableStart="@drawable/wifi"
                        android:layout_marginLeft="16dp"
                        android:layout_marginTop="10dp"
                        android:fontFamily="@font/regular"
                        android:text="   Wifi"
                        android:textColor="#707070"
                        android:textSize="16sp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                    <TextView
                        android:id="@+id/bed"
                        android:layout_below="@+id/wifi"
                        android:drawableStart="@drawable/bed"
                        android:layout_marginLeft="16dp"
                        android:layout_marginTop="10dp"
                        android:text="   1 Queen Bed"
                        android:fontFamily="@font/regular"
                        android:textColor="#707070"
                        android:textSize="16sp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                    <TextView
                        android:id="@+id/lunch"
                        android:layout_below="@+id/bed"
                        android:drawableStart="@drawable/lunch"
                        android:layout_marginLeft="16dp"
                        android:layout_marginTop="10dp"
                        android:text="   Sarapan Gratis"
                        android:fontFamily="@font/regular"
                        android:textColor="#707070"
                        android:textSize="16sp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                    <TextView
                        android:id="@+id/hotel_price"
                        android:layout_below="@+id/lunch"
                        android:textAlignment="textEnd"
                        android:layout_marginLeft="16dp"
                        android:layout_marginTop="10dp"
                        android:text="Rp. 5.625.082"
                        android:fontFamily="@font/bold"
                        android:textColor="#5399af"
                        android:textSize="18sp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                    <Button
                        android:id="@+id/pilihKama1_btn"
                        android:layout_below="@+id/hotel_price"
                        android:text="Pilih Kamar"
                        android:textSize="14dp"
                        android:layout_alignParentRight="true"
                        android:layout_gravity="center"
                        android:background="@drawable/bg_btn"
                        android:layout_marginRight="16dp"
                        android:fontFamily="@font/bold"
                        android:layout_width="118dp"
                        android:layout_height="36dp"
                        android:layout_marginTop="12dp"
                        android:textColor="#ffff" />

                </RelativeLayout>
            </androidx.cardview.widget.CardView>
        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="20dp" >
        </RelativeLayout>

        <LinearLayout
            android:layout_gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="20dp"
                android:layout_margin="8dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="300dp">

                    <ImageView
                        android:id="@+id/hotel2"
                        android:src="@drawable/room"
                        android:scaleType="centerCrop"
                        android:layout_width="match_parent"
                        android:layout_height="200dp"/>

                    <TextView
                        android:id="@+id/title2"
                        android:layout_below="@+id/hotel2"
                        android:layout_marginLeft="16dp"
                        android:layout_marginTop="10dp"
                        android:text="Eastin Ashta Hotel"
                        android:fontFamily="@font/bold"
                        android:textColor="#707070"
                        android:textSize="16sp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                    <TextView
                        android:id="@+id/wifi2"
                        android:layout_below="@+id/title2"
                        android:drawableStart="@drawable/wifi"
                        android:layout_marginLeft="16dp"
                        android:layout_marginTop="10dp"
                        android:fontFamily="@font/regular"
                        android:text="   Wifi"
                        android:textColor="#707070"
                        android:textSize="16sp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                    <TextView
                        android:id="@+id/bed2"
                        android:layout_below="@+id/wifi2"
                        android:drawableStart="@drawable/bed"
                        android:layout_marginLeft="16dp"
                        android:layout_marginTop="10dp"
                        android:text="   1 Queen Bed"
                        android:fontFamily="@font/regular"
                        android:textColor="#707070"
                        android:textSize="16sp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                    <TextView
                        android:id="@+id/lunch2"
                        android:layout_below="@+id/bed2"
                        android:drawableStart="@drawable/lunch"
                        android:layout_marginLeft="16dp"
                        android:layout_marginTop="10dp"
                        android:text="   Sarapan Gratis"
                        android:fontFamily="@font/regular"
                        android:textColor="#707070"
                        android:textSize="16sp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                    <TextView
                        android:id="@+id/price2"
                        android:layout_below="@+id/lunch2"
                        android:textAlignment="textEnd"
                        android:layout_marginLeft="16dp"
                        android:layout_marginTop="10dp"
                        android:text="Rp. 5.625.082"
                        android:fontFamily="@font/bold"
                        android:textColor="#5399af"
                        android:textSize="18sp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                    <Button
                        android:id="@+id/pilihKamar2_btn"
                        android:layout_below="@+id/price2"
                        android:text="Pilih Kamar"
                        android:textSize="14dp"
                        android:layout_alignParentRight="true"
                        android:layout_gravity="center"
                        android:background="@drawable/bg_btn"
                        android:layout_marginRight="16dp"
                        android:fontFamily="@font/bold"
                        android:layout_width="118dp"
                        android:layout_height="36dp"
                        android:layout_marginTop="12dp"
                        android:textColor="#ffff" />
                </RelativeLayout>
            </androidx.cardview.widget.CardView>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>