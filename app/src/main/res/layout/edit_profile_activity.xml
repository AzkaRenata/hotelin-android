<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_marginHorizontal="20dp"
    android:layout_marginTop="20dp"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ScrollView
        android:layout_below="@+id/top_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="20dp"
        android:id="@+id/scroll1">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/edit_profile_iv"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_marginVertical="20dp"
                android:src="@drawable/circle_sample"
                />

            <EditText
                android:id="@+id/username_edit_et"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"


                android:focusable="true"
                android:focusableInTouchMode="true"
                android:inputType="text"
                android:layout_marginVertical="10dp"
                android:layout_below="@+id/edit_profile_iv"
                android:hint="Username"
                android:padding="10dp"
                android:textSize="16sp" />

            <EditText
                android:id="@+id/name_edit_et"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"


                android:hint="Full Name"
                android:layout_below="@+id/username_edit_et"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:inputType="text"
                android:layout_marginVertical="10dp"
                android:padding="10dp"
                android:textSize="16sp" />

            <EditText
                android:id="@+id/email_edit_et"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"


                android:focusable="true"
                android:focusableInTouchMode="true"
                android:inputType="textEmailAddress"
                android:hint="Email"
                android:layout_below="@id/name_edit_et"
                android:layout_marginVertical="10dp"
                android:padding="10dp"
                android:textSize="16sp" />

            <EditText
                android:id="@+id/telp_edit_et"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"


                android:focusable="true"
                android:focusableInTouchMode="true"
                android:inputType="number"
                android:padding="10dp"
                android:hint="Telephone Number"
                android:layout_below="@id/email_edit_et"
                android:layout_marginVertical="10dp"
                android:textSize="16sp" />

            <EditText
                android:id="@+id/address_edit_et"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"


                android:focusable="true"
                android:focusableInTouchMode="true"
                android:inputType="text"
                android:padding="10dp"
                android:hint="Address"
                android:layout_below="@id/telp_edit_et"
                android:layout_marginVertical="10dp"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/gender_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Gender"
                android:layout_below="@id/address_edit_et"
                android:layout_marginVertical="10dp"/>

            <RadioGroup
                android:id="@+id/gender_edit_rg"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:layout_below="@id/gender_tv"
                android:orientation="horizontal">

                <RadioButton
                    android:id="@+id/male_edit_rb"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="10dp"
                    android:text="Male"
                    android:textSize="16sp" />

                <RadioButton
                    android:id="@+id/female_edit_rb"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="10dp"
                    android:text="Female"
                    android:textSize="16sp" />

            </RadioGroup>

            <Button
                android:id="@+id/save_edit_btn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginVertical="10dp"
                android:background="@drawable/button_color"
                android:text="Save"
                android:textColor="#ffffff"
                android:layout_below="@id/gender_edit_rg"
                android:textSize="22sp">
            </Button>
        </RelativeLayout>
    </ScrollView>
</RelativeLayout>