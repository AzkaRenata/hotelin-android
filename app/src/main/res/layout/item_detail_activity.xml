<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="630dp"
            android:layout_weight="1"
            android:gravity="center"
            android:padding="18dp">

            <androidx.cardview.widget.CardView
                android:layout_width="360dp"
                android:layout_height="206dp"
                app:cardCornerRadius="10dp">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop"
                    android:src="@drawable/hotel1"></ImageView>
            </androidx.cardview.widget.CardView>
        </LinearLayout>

        <LinearLayout
            android:paddingLeft="36dp"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="450dp">

            <androidx.cardview.widget.CardView
                android:layout_width="60dp"
                android:layout_height="60dp"
                app:cardCornerRadius="10dp">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/hotel1"
                    android:scaleType="centerCrop">
                </ImageView>
            </androidx.cardview.widget.CardView>

            <RelativeLayout
                android:layout_width="32dp"
                android:layout_height="wrap_content" >
            </RelativeLayout>

            <androidx.cardview.widget.CardView
                android:layout_width="60dp"
                android:layout_height="60dp"
                app:cardCornerRadius="10dp">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/hotel1"
                    android:scaleType="centerCrop">
                </ImageView>
            </androidx.cardview.widget.CardView>

            <RelativeLayout
                android:layout_width="32dp"
                android:layout_height="wrap_content" >
            </RelativeLayout>

            <androidx.cardview.widget.CardView
                android:layout_width="60dp"
                android:layout_height="60dp"
                app:cardCornerRadius="10dp">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/hotel1"
                    android:scaleType="centerCrop">
                </ImageView>
            </androidx.cardview.widget.CardView>

            <RelativeLayout
                android:layout_width="32dp"
                android:layout_height="wrap_content" >
            </RelativeLayout>

            <androidx.cardview.widget.CardView
                android:layout_width="60dp"
                android:layout_height="60dp"
                app:cardCornerRadius="10dp">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/hotel1"
                    android:scaleType="centerCrop">
                </ImageView>
            </androidx.cardview.widget.CardView>
        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/nama"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/bold"
                android:paddingLeft="32dp"
                android:text="Eastin Ashta Resort Canggu"
                android:textColor="#707070"
                android:textSize="20dp" />

            <TextView
                android:text="  Canggu, Bali"
                android:textSize="14dp"
                android:paddingLeft="32dp"
                android:drawableStart="@drawable/place"
                android:fontFamily="@font/semibold"
                android:layout_marginTop="10dp"
                android:textColor="#707070"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <LinearLayout
                android:layout_gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="30dp"
                android:paddingTop="10dp">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/star"/>

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/star"/>
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/star"/>
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/star"/>
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/star"/>

                <RelativeLayout
                    android:layout_width="140dp"
                    android:layout_height="match_parent" >
                </RelativeLayout>

                <TextView
                    android:text="Rp. 5.625.084"
                    android:textSize="16dp"
                    android:fontFamily="@font/semibold"
                    android:textColor="#5399af"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

            </LinearLayout>

            <LinearLayout
                android:layout_gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="20dp"
                android:paddingTop="30dp">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/lunch"
                    android:paddingLeft="50dp"/>

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/wifi"
                    android:paddingLeft="50dp"/>
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/pool"
                    android:paddingLeft="50dp"/>
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ac"
                    android:paddingLeft="50dp"/>
            </LinearLayout>

            <TextView
                android:text="About Hotel"
                android:textSize="16dp"
                android:paddingLeft="32dp"
                android:fontFamily="@font/bold"
                android:layout_marginTop="30dp"
                android:textColor="#707070"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <TextView
                android:text="@string/desc"
                android:textSize="16dp"
                android:paddingLeft="32dp"
                android:fontFamily="@font/regular"
                android:layout_marginTop="10dp"
                android:textColor="#707070"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="60dp" >
            </RelativeLayout>

            <Button
                android:id="@+id/login_btn"
                android:text="Pilih Kamar"
                android:textSize="20dp"
                android:layout_width="210dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:background="@drawable/bg_btn"
                android:fontFamily="@font/bold"
                android:textColor="#ffff" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>