<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_weight="1"
    android:orientation="vertical"
    android:padding="0dp">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="20dp"
        android:layout_margin="8dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/room_list_item_room_iv"
                android:src="@drawable/no_pic"
                android:scaleType="centerCrop"
                android:layout_width="match_parent"
                android:layout_height="150dp"/>

            <RelativeLayout
                android:layout_below="@+id/room_list_item_room_iv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="10dp">

                <TextView
                    android:id="@+id/room_list_item_room_type_tv"
                    android:layout_marginVertical="10dp"
                    android:text="@string/room_title_text"
                    android:fontFamily="@font/bold"
                    android:textColor="#707070"
                    android:textSize="18sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:id="@+id/room_list_bed_tv"
                    android:layout_below="@id/room_list_item_room_type_tv"
                    android:fontFamily="@font/regular"
                    android:layout_marginBottom="5dp"
                    android:drawableLeft="@drawable/icon_bed"
                    android:drawablePadding="10dp"
                    android:text="@string/bed_text"
                    android:layout_gravity="center_vertical"
                    android:textColor="#707070"
                    android:textSize="14sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:id="@+id/room_list_capacity_tv"
                    android:layout_below="@id/room_list_bed_tv"
                    android:drawableLeft="@drawable/icon_people"
                    android:layout_marginBottom="5dp"
                    android:drawablePadding="10dp"
                    android:fontFamily="@font/regular"
                    android:text="@string/guest_capacity_text"
                    android:layout_gravity="center_vertical"
                    android:textColor="#707070"
                    android:textSize="14sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:id="@+id/room_list_item_facility_title_tv"
                    android:layout_marginVertical="10dp"
                    android:layout_below="@id/room_list_capacity_tv"
                    android:text="@string/facility_text"
                    android:fontFamily="@font/bold"
                    android:textColor="#707070"
                    android:textSize="14sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:id="@+id/room_list_fac_wifi_tv"
                    android:layout_below="@id/room_list_item_facility_title_tv"
                    android:fontFamily="@font/regular"
                    android:layout_marginBottom="10dp"
                    android:drawableLeft="@drawable/icon_wifi"
                    android:drawablePadding="10dp"
                    android:text="@string/not_available_text"
                    android:layout_gravity="center_vertical"
                    android:textColor="#CC0000"
                    android:textSize="14sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:id="@+id/room_list_fac_breakfast_tv"
                    android:layout_below="@+id/room_list_fac_wifi_tv"
                    android:fontFamily="@font/regular"
                    android:drawableLeft="@drawable/icon_breakfast"
                    android:drawablePadding="10dp"
                    android:layout_marginBottom="10dp"
                    android:text="@string/not_available_text"
                    android:layout_gravity="center_vertical"
                    android:textColor="#CC0000"
                    android:textSize="14sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:id="@+id/room_list_fac_ac_tv"
                    android:layout_below="@+id/room_list_fac_breakfast_tv"
                    android:fontFamily="@font/regular"
                    android:drawableLeft="@drawable/icon_ac"
                    android:drawablePadding="10dp"
                    android:layout_marginBottom="10dp"
                    android:text="@string/not_available_text"
                    android:layout_gravity="center_vertical"
                    android:textColor="#CC0000"
                    android:textSize="14sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:id="@+id/room_list_fac_tv_tv"
                    android:layout_below="@+id/room_list_fac_ac_tv"
                    android:fontFamily="@font/regular"
                    android:drawableLeft="@drawable/icon_tv"
                    android:drawablePadding="10dp"
                    android:layout_marginBottom="10dp"
                    android:text="@string/not_available_text"
                    android:layout_gravity="center_vertical"
                    android:textColor="#CC0000"
                    android:textSize="14sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <RelativeLayout
                    android:layout_below="@id/room_list_fac_tv_tv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="15dp">

                    <TextView
                        android:id="@+id/room_list_price_tv"
                        android:textAlignment="textEnd"
                        android:text="@string/price_text"
                        android:fontFamily="@font/bold"
                        android:layout_centerVertical="true"
                        android:textColor="#5399af"
                        android:textSize="24sp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                    <Button
                        android:id="@+id/room_list_item_select_btn"
                        android:text="@string/select_room_text"
                        android:textSize="14dp"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:background="@drawable/bg_btn"
                        android:fontFamily="@font/bold"
                        android:layout_width="wrap_content"
                        android:layout_height="40dp"
                        android:paddingVertical="5dp"
                        android:paddingHorizontal="20dp"
                        android:layout_marginTop="12dp"
                        android:textColor="#ffff" />
                </RelativeLayout>
            </RelativeLayout>
        </RelativeLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>