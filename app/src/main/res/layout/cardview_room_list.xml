<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_weight="1"
    android:orientation="vertical"
    android:padding="0dp">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="20dp"
        android:layout_margin="8dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/room_list_item_room_iv"
                android:src="@drawable/room"
                android:scaleType="centerCrop"
                android:layout_width="match_parent"
                android:layout_height="150dp"/>

            <RelativeLayout
                android:layout_below="@+id/room_list_item_room_iv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="10dp">

                <TextView
                    android:id="@+id/room_list_item_room_type_tv"
                    android:layout_marginVertical="10dp"
                    android:text="Kode Kamar - Tipe Kamar"
                    android:fontFamily="@font/bold"
                    android:textColor="#707070"
                    android:textSize="18sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <LinearLayout
                    android:id="@+id/room_list_bed_layout"
                    android:layout_below="@id/room_list_item_room_type_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/bed"
                        android:layout_marginRight="10dp" />

                    <TextView
                        android:id="@+id/room_list_bed_tv"
                        android:fontFamily="@font/regular"
                        android:text="@string/bed_text"
                        android:layout_gravity="center_vertical"
                        android:textColor="#707070"
                        android:textSize="14sp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/room_list_capacity_layout"
                    android:layout_below="@id/room_list_bed_layout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/ic_user"
                        android:layout_marginRight="10dp" />

                    <TextView
                        android:id="@+id/room_list_capacity_tv"
                        android:fontFamily="@font/regular"
                        android:text="@string/guest_capacity_text"
                        android:layout_gravity="center_vertical"
                        android:textColor="#707070"
                        android:textSize="14sp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/room_list_fac1_layout"
                    android:layout_below="@id/room_list_capacity_layout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/lunch"
                        android:layout_marginRight="10dp" />

                    <TextView
                        android:id="@+id/room_list_fac1_tv"
                        android:fontFamily="@font/regular"
                        android:text="@string/not_available_text"
                        android:layout_gravity="center_vertical"
                        android:textColor="#707070"
                        android:textSize="14sp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/room_list_fac2_layout"
                    android:layout_below="@id/room_list_fac1_layout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/wifi"
                        android:layout_marginRight="10dp" />

                    <TextView
                        android:id="@+id/room_list_fac2_tv"
                        android:fontFamily="@font/regular"
                        android:text="@string/not_available_text"
                        android:layout_gravity="center_vertical"
                        android:textColor="#707070"
                        android:textSize="14sp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                </LinearLayout>



                <RelativeLayout
                    android:layout_below="@id/room_list_fac2_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="15dp">

                    <TextView
                        android:id="@+id/room_list_price_tv"
                        android:textAlignment="textEnd"
                        android:text="@string/price_text"
                        android:fontFamily="@font/bold"
                        android:layout_centerVertical="true"
                        android:textColor="#5399af"
                        android:textSize="24sp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                    <Button
                        android:id="@+id/room_list_item_select_btn"
                        android:text="@string/select_room_text"
                        android:textSize="14dp"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:background="@drawable/bg_btn"
                        android:fontFamily="@font/bold"
                        android:layout_width="wrap_content"
                        android:layout_height="40dp"
                        android:paddingVertical="5dp"
                        android:paddingHorizontal="20dp"
                        android:layout_marginTop="12dp"
                        android:textColor="#ffff" />
                </RelativeLayout>

            </RelativeLayout>



        </RelativeLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>