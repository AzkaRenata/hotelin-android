<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/detail_hotel_pic"
        android:src="@drawable/no_pic"
        android:scaleType="centerCrop"
        android:layout_width="match_parent"
        android:layout_height="150dp"/>

    <ScrollView
        android:layout_below="@id/detail_hotel_pic"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_marginTop="10dp"
            android:layout_marginHorizontal="15dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/hotel_detail_name_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:fontFamily="@font/bold"
                android:text="@string/hotel_name_text"
                android:textColor="@color/hotelinPrimary"
                android:textSize="24sp" />

            <TextView
                android:id="@+id/hotel_detail_location_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginVertical="5dp"
                android:drawableStart="@drawable/icon_location"
                android:drawablePadding="10dp"
                android:fontFamily="@font/semibold"
                android:text="@string/hotel_location_text"
                android:textColor="#707070"
                android:textSize="14sp" />

            <LinearLayout
                android:layout_gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginVertical="5dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/hotel_detail_rating_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:fontFamily="@font/semibold"
                    android:text="0"
                    android:textColor="#707070"
                    android:textSize="20sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="10dp"
                    android:layout_gravity="bottom"
                    android:fontFamily="@font/semibold"
                    android:text="/5"
                    android:textColor="#707070"
                    android:textSize="12sp" />

                <ImageView
                    android:id="@+id/hotel_detail_star_1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:src="@drawable/icon_star_dark"/>

                <ImageView
                    android:id="@+id/hotel_detail_star_2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:src="@drawable/icon_star_dark" />

                <ImageView
                    android:id="@+id/hotel_detail_star_3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:src="@drawable/icon_star_dark" />

                <ImageView
                    android:id="@+id/hotel_detail_star_4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:src="@drawable/icon_star_dark" />

                <ImageView
                    android:id="@+id/hotel_detail_star_5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:src="@drawable/icon_star_dark" />

                <TextView
                    android:id="@+id/hotel_detail_review_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_gravity="center_vertical"
                    android:fontFamily="@font/semibold"
                    android:text="(0 Ulasan)"
                    android:textColor="#707070"
                    android:textSize="14sp" />
            </LinearLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginVertical="20dp">

                <TextView
                    android:id="@+id/hotel_detail_no_facility_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginVertical="10dp"
                    android:fontFamily="@font/bold"
                    android:layout_centerInParent="true"
                    android:text="@string/no_facility_text"
                    android:textColor="#707070"
                    android:textSize="18sp" />

                <LinearLayout
                    android:layout_gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/hotel_detail_fac_wifi_tv"
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_height="35dp"
                        android:src="@drawable/wifi"
                        android:visibility="gone"/>

                    <ImageView
                        android:id="@+id/hotel_detail_fac_breakfast_tv"
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_height="35dp"
                        android:src="@drawable/lunch"
                        android:visibility="gone"/>

                    <ImageView
                        android:id="@+id/hotel_detail_fac_ac_tv"
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_height="35dp"
                        android:src="@drawable/ac"
                        android:visibility="gone"/>

                    <ImageView
                        android:id="@+id/hotel_detail_fac_tv_tv"
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_height="35dp"
                        android:src="@drawable/ic_tv"
                        android:visibility="gone"/>
                </LinearLayout>
            </RelativeLayout>


            <TextView
                android:text="@string/hotel_desc_text"
                android:textSize="16sp"
                android:fontFamily="@font/bold"
                android:textColor="#707070"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/hotel_detail_description_tv"
                android:layout_marginVertical="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/regular"
                android:text="@string/hotel_desc_text"
                android:textColor="#707070"
                android:textSize="16sp" />

            <TextView
                android:layout_marginTop="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/regular"
                android:layout_gravity="end"
                android:textStyle="bold"
                android:text="@string/starts_from_text"
                android:textColor="@color/hotelinPrimary"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/hotel_detail_price_tv"
                android:layout_marginVertical="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/regular"
                android:layout_gravity="end"
                android:text="@string/price_text"
                android:textStyle="bold"
                android:textColor="@color/hotelinPrimary"
                android:textSize="24sp" />

            <Button
                android:id="@+id/hotel_detail_select_btn"
                android:layout_marginVertical="15dp"
                android:text="@string/select_room_text"
                android:textSize="20sp"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:background="@drawable/bg_btn"
                android:fontFamily="@font/bold"
                android:textColor="#ffff" />
        </LinearLayout>
    </ScrollView>
</RelativeLayout>