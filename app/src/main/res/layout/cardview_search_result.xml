<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_weight="1"
    android:orientation="vertical"
    android:padding="0dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            app:cardCornerRadius="20dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/hotel_list_item_hotel_iv"
                    android:src="@drawable/no_pic"
                    android:layout_width="match_parent"
                    android:layout_height="150dp"
                    android:scaleType="centerCrop" />

                <TextView
                    android:id="@+id/hotel_list_item_name_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/hotel_list_item_hotel_iv"
                    android:layout_marginLeft="16dp"
                    android:layout_marginTop="10dp"
                    android:fontFamily="@font/bold"
                    android:text="@string/hotel_name_text"
                    android:textColor="#707070"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/hotel_list_item_location_tv"
                    android:drawableLeft="@drawable/icon_location"
                    android:drawablePadding="5dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/hotel_list_item_name_tv"
                    android:gravity="center_vertical"
                    android:layout_marginLeft="16dp"
                    android:layout_marginVertical="5dp"
                    android:fontFamily="@font/regular"
                    android:text="@string/hotel_location_text"
                    android:textColor="#707070"
                    android:textSize="12sp" />

                <LinearLayout
                    android:id="@+id/hotel_list_item_rating_layout"
                    android:layout_below="@+id/hotel_list_item_location_tv"
                    android:layout_gravity="center"
                    android:layout_marginLeft="16dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/hotel_detail_rating_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:fontFamily="@font/semibold"
                        android:text="0"
                        android:textColor="#707070"
                        android:textSize="20sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="10dp"
                        android:layout_gravity="bottom"
                        android:fontFamily="@font/semibold"
                        android:text="/5"
                        android:textColor="#707070"
                        android:textSize="12sp" />

                    <ImageView
                        android:id="@+id/hotel_detail_star_1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:src="@drawable/icon_star_dark"/>

                    <ImageView
                        android:id="@+id/hotel_detail_star_2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:src="@drawable/icon_star_dark" />

                    <ImageView
                        android:id="@+id/hotel_detail_star_3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:src="@drawable/icon_star_dark" />

                    <ImageView
                        android:id="@+id/hotel_detail_star_4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:src="@drawable/icon_star_dark" />

                    <ImageView
                        android:id="@+id/hotel_detail_star_5"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:src="@drawable/icon_star_dark" />

                    <TextView
                        android:id="@+id/hotel_detail_review_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10dp"
                        android:layout_gravity="center_vertical"
                        android:fontFamily="@font/semibold"
                        android:text="(0 Ulasan)"
                        android:textColor="#707070"
                        android:textSize="14sp" />
                </LinearLayout>

                <TextView
                    android:id="@+id/hotel_list_item_price_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/hotel_list_item_rating_layout"
                    android:layout_marginRight="16dp"
                    android:layout_marginVertical="10dp"
                    android:fontFamily="@font/bold"
                    android:layout_alignParentRight="true"
                    android:text="@string/price_text"
                    android:textAlignment="textEnd"
                    android:textColor="#5399af"
                    android:textSize="24sp" />

            </RelativeLayout>
        </androidx.cardview.widget.CardView>
    </LinearLayout>
</LinearLayout>