<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <View
        android:layout_width="match_parent"
        android:layout_height="210dp"
        android:background="#5399af"/>

    <ScrollView
        android:id="@+id/scroll1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="20dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/profile_photo_civ"
                    android:layout_width="110dp"
                    android:layout_height="110dp"
                    android:src="@drawable/ic_profile_picture"
                    app:civ_fill_color="#EFEFEF"
                    android:layout_centerHorizontal="true"
                    android:elevation="1dp"
                    android:layout_marginTop="34dp"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="400dp"
                        android:layout_marginTop="90dp"
                        app:contentPaddingTop="15dp"
                        app:contentPaddingRight="15dp"
                        app:contentPaddingLeft="15dp"
                        app:contentPaddingBottom="15dp"
                        app:cardCornerRadius="10dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/name_tv"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:drawablePadding="7dp"
                                android:text="Username"
                                android:textStyle="bold"
                                android:textAlignment="center"
                                android:textColor="#707070"
                                android:layout_marginTop="50dp"
                                android:layout_marginLeft="20dp"
                                android:layout_marginRight="20dp"/>

                            <TextView
                                android:id="@+id/email_tv"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:drawablePadding="7dp"
                                android:text="email@email.com"
                                android:textStyle="bold"
                                android:textAlignment="center"
                                android:layout_below="@+id/name_tv"
                                android:textColor="#707070"
                                android:layout_marginLeft="20dp"
                                android:layout_marginRight="20dp"/>

                            <TextView
                                android:id="@+id/tvAccountInformation"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:drawableStart="@drawable/ic_user"
                                android:drawableEnd="@drawable/ic_right"
                                android:layout_below="@+id/email_tv"
                                android:drawablePadding="7dp"
                                android:text="Informasi Akun"
                                android:textStyle="bold"
                                android:textColor="#707070"
                                android:layout_marginTop="70dp"
                                android:layout_marginLeft="20dp"
                                android:layout_marginRight="20dp"/>

                            <TextView
                                android:id="@+id/tvBookingHistory"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:drawableStart="@drawable/ic_history"
                                android:drawableEnd="@drawable/ic_right"
                                android:layout_below="@id/tvAccountInformation"
                                android:drawablePadding="7dp"
                                android:text="Histori Booking"
                                android:textStyle="bold"
                                android:textColor="#707070"
                                android:layout_marginTop="20dp"
                                android:layout_marginLeft="20dp"
                                android:layout_marginRight="20dp"/>

                            <TextView
                                android:id="@+id/tvChangePassword"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:drawableStart="@drawable/ic_change_password"
                                android:drawableEnd="@drawable/ic_right"
                                android:layout_below="@id/tvBookingHistory"
                                android:drawablePadding="7dp"
                                android:text="Change Password"
                                android:textStyle="bold"
                                android:textColor="#707070"
                                android:layout_marginTop="20dp"
                                android:layout_marginLeft="20dp"
                                android:layout_marginRight="20dp"/>

                            <TextView
                                android:id="@+id/tvLogOut"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_below="@id/tvChangePassword"
                                android:layout_marginTop="70dp"
                                android:drawablePadding="7dp"
                                android:text="Log Out"
                                android:textAlignment="center"
                                android:textColor="#5399af"
                                android:textStyle="bold" />
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>
                </LinearLayout>
            </RelativeLayout>
        </LinearLayout>
    </ScrollView>
</RelativeLayout>