<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_weight="1"
    android:orientation="vertical"
    android:padding="0dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            app:cardCornerRadius="20dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/booking_history_item_hotel_iv"
                    android:src="@drawable/no_pic"
                    android:layout_width="match_parent"
                    android:layout_height="150dp"
                    android:scaleType="centerCrop" />

                <LinearLayout
                    android:layout_below="@id/booking_history_item_hotel_iv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/booking_history_item_hotel_name_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/bold"
                        android:text="@string/hotel_name_text"
                        android:textColor="#707070"
                        android:textSize="18sp" />

                    <TextView
                        android:id="@+id/booking_history_item_hotel_location_tv"
                        android:drawableLeft="@drawable/icon_location"
                        android:drawablePadding="5dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:layout_marginTop="10dp"
                        android:fontFamily="@font/regular"
                        android:text="@string/hotel_location_text"
                        android:textColor="#707070"
                        android:textSize="12sp" />

                    <TextView
                        android:id="@+id/booking_history_item_room_tv"
                        android:drawableLeft="@drawable/icon_bed"
                        android:drawablePadding="5dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:layout_marginTop="5dp"
                        android:fontFamily="@font/regular"
                        android:text="@string/room_title_text"
                        android:textColor="#707070"
                        android:textSize="12sp" />

                    <TextView
                        android:id="@+id/booking_history_item_check_in_tv"
                        android:drawableLeft="@drawable/icon_check_in"
                        android:drawablePadding="5dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:layout_marginTop="5dp"
                        android:fontFamily="@font/regular"
                        android:text="@string/check_in_text"
                        android:textColor="#707070"
                        android:textSize="12sp" />

                    <TextView
                        android:id="@+id/booking_history_item_check_out_tv"
                        android:drawableLeft="@drawable/icon_check_out"
                        android:drawablePadding="5dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:layout_marginTop="5dp"
                        android:fontFamily="@font/regular"
                        android:text="@string/check_out_text"
                        android:textColor="#707070"
                        android:textSize="12sp" />

                    <TextView
                        android:id="@+id/booking_history_item_price_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginVertical="10dp"
                        android:layout_gravity="end"
                        android:fontFamily="@font/bold"
                        android:text="@string/price_text"
                        android:textColor="#5399af"
                        android:textSize="24sp" />
                </LinearLayout>
            </RelativeLayout>
        </androidx.cardview.widget.CardView>
    </LinearLayout>
</LinearLayout>