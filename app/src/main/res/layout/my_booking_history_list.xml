<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="0dp"
    tools:context=".MainActivity">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        app:cardCornerRadius="20dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_marginBottom="10dp"
            >

            <ImageView
                android:id="@+id/booing_history_hotel_iv"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:src="@drawable/hotel1"
                android:scaleType="centerCrop"/>

            <TextView
                android:id="@+id/booing_history_hotel_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Eastin Astha Resort Canggu"
                android:textStyle="bold"
                android:textColor="#707070"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="7dp"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/booing_history_hotel_location"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="7dp"
                android:drawableStart="@drawable/ic_location"
                android:drawablePadding="7dp"
                android:text="Cidadap, Bandung"
                android:textColor="#707070"
                android:textSize="12sp"
                android:gravity="center"/>

            <TextView
                android:id="@+id/booing_history_booking_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="7dp"
                android:drawableStart="@drawable/ic_calendar"
                android:drawablePadding="7dp"
                android:text="Tanggal Pemesanan : 1 Okt 2020"
                android:textColor="#707070"
                android:textSize="12sp"
                android:gravity="center"/>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="7dp">

                <TextView
                    android:id="@+id/booing_history_room_type"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableStart="@drawable/ic_bed"
                    android:drawablePadding="7dp"
                    android:text="Presidental Suite"
                    android:textColor="#707070"
                    android:textSize="12sp"
                    android:gravity="center"/>

                <TextView
                    android:id="@+id/booing_history_price"
                    android:gravity="right"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Rp1.625.085,00"
                    android:textStyle="bold"
                    android:textColor="#5399af"
                    android:textSize="12sp"
                    android:layout_marginRight="7dp"/>

            </LinearLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>

</LinearLayout>