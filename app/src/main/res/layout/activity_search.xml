<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="30dp"
    tools:context=".MainActivity">

    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:layout_marginTop="20dp"
        >

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableStart="@drawable/ic_location"
            android:drawablePadding="7dp"
            android:ems="10"
            android:hint="Lokasi Hotel"
            android:inputType="text"
            android:textSize="16sp"
            android:drawableLeft="@drawable/ic_location" />

    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:focusable="true"
        android:focusableInTouchMode="true"
        >

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableStart="@drawable/ic_check_in"
            android:drawablePadding="7dp"
            android:ems="10"
            android:hint="Check In"
            android:inputType="date"
            android:textSize="16sp"
            android:drawableLeft="@drawable/ic_check_in" />

    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:layout_marginTop="10dp"
        >

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableStart="@drawable/ic_check_out"
            android:drawablePadding="7dp"
            android:ems="10"
            android:hint="Check Out"
            android:inputType="date"
            android:textSize="16sp"
            android:drawableLeft="@drawable/ic_check_out" />

    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:layout_marginTop="10dp"
        >

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableStart="@drawable/ic_room"
            android:drawablePadding="7dp"
            android:ems="10"
            android:hint="Jumlah Kamar"
            android:inputType="number"
            android:textSize="16sp"
            android:drawableLeft="@drawable/ic_room" />

    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:layout_marginTop="10dp"
        >

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableStart="@drawable/ic_guest"
            android:drawablePadding="7dp"
            android:ems="10"
            android:hint="Jumlah Tamu"
            android:inputType="number"
            android:textSize="16sp"
            android:drawableLeft="@drawable/ic_guest" />

    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:layout_marginTop="5dp"
    >

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableStart="@drawable/ic_price"
            android:drawablePadding="7dp"
            android:ems="10"
            android:hint="Harga"
            android:inputType="number"
            android:textSize="16sp"
            android:drawableLeft="@drawable/ic_price" />

    </com.google.android.material.textfield.TextInputLayout>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Search"
        android:textSize="22sp"
        android:textColor="#ffffff"
        android:layout_marginTop="25dp"
        android:background="@drawable/button_color"

    >

    </Button>

</LinearLayout>