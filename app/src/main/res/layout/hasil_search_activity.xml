<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="1011dp"
        android:layout_weight="1"
        android:background="#FFFF"
        android:orientation="vertical"
        android:padding="32dp">

        <LinearLayout
            android:layout_gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="20dp"
                android:layout_margin="8dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="300dp">

                    <ImageView
                        android:id="@+id/hotel"
                        android:src="@drawable/hotel1"
                        android:scaleType="centerCrop"
                        android:layout_width="match_parent"
                        android:layout_height="200dp"/>

                    <TextView
                        android:id="@+id/title"
                        android:layout_below="@+id/hotel"
                        android:layout_marginLeft="16dp"
                        android:layout_marginTop="10dp"
                        android:text="Eastin Ashta Hotel"
                        android:fontFamily="@font/bold"
                        android:textColor="#707070"
                        android:textSize="16sp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                    <TextView
                        android:id="@+id/desc"
                        android:layout_below="@+id/title"
                        android:layout_marginLeft="16dp"
                        android:layout_marginTop="10dp"
                        android:text="Canggu, Bali"
                        android:fontFamily="@font/regular"
                        android:textColor="#707070"
                        android:textSize="14sp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                    <TextView
                        android:id="@+id/price"
                        android:layout_below="@+id/desc"
                        android:textAlignment="textEnd"
                        android:layout_marginLeft="16dp"
                        android:layout_marginTop="10dp"
                        android:text="Rp. 5.625.082"
                        android:fontFamily="@font/bold"
                        android:textColor="#5399af"
                        android:textSize="16sp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                </RelativeLayout>
            </androidx.cardview.widget.CardView>
        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="20dp" >
        </RelativeLayout>
        <LinearLayout
            android:layout_gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="20dp"
                android:layout_margin="8dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="300dp">

                    <ImageView
                        android:id="@+id/hotel2"
                        android:src="@drawable/hotel1"
                        android:scaleType="centerCrop"
                        android:layout_width="match_parent"
                        android:layout_height="200dp"/>

                    <TextView
                        android:id="@+id/title2"
                        android:layout_below="@+id/hotel2"
                        android:layout_marginLeft="16dp"
                        android:layout_marginTop="10dp"
                        android:text="Eastin Ashta Hotel"
                        android:fontFamily="@font/bold"
                        android:textColor="#707070"
                        android:textSize="16sp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                    <TextView
                        android:id="@+id/desc2"
                        android:layout_below="@+id/title2"
                        android:layout_marginLeft="16dp"
                        android:layout_marginTop="10dp"
                        android:text="Canggu, Bali"
                        android:fontFamily="@font/regular"
                        android:textColor="#707070"
                        android:textSize="14sp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                    <TextView
                        android:id="@+id/price2"
                        android:layout_below="@+id/desc2"
                        android:textAlignment="textEnd"
                        android:layout_marginLeft="16dp"
                        android:layout_marginTop="10dp"
                        android:text="Rp. 5.625.082"
                        android:fontFamily="@font/bold"
                        android:textColor="#5399af"
                        android:textSize="16sp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                </RelativeLayout>
            </androidx.cardview.widget.CardView>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:background="#F6F5F4"
        android:gravity="center"
        android:layout_weight="2"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <com.google.android.material.bottomnavigation.BottomNavigationView
                android:id="@+id/bottom_navigation"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                app:itemBackground="@color/colorAccent"
                app:itemIconTint="@drawable/selector"
                app:itemTextColor="@drawable/selector"
                app:menu="@menu/menu_navigation" />
        </RelativeLayout>
    </LinearLayout>

</LinearLayout>